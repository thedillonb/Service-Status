extends layout

block content
    .container
        .row
            .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
                form
                    .form-group
                        label(for='inputEmail') Email
                        input#inputEmail.form-control(type='email', placeholder='Email')
                      .form-group
                        label(for='inputPassword') Password
                        input#inputPassword.form-control(type='password', placeholder='Password')
                      .checkbox
                        label
                          input(type='checkbox')
                          | Remember me
                      button.btn.btn-primary(type='submit') Login
